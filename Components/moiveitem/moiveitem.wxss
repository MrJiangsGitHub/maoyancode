@import "../../assets//iconfont.wxss";

.item {
    display: flex;

    font-size: 28rpx;
    color: #666;
    margin: 20rpx 10rpx;
    padding-bottom: 4rpx;
    border-bottom: 2rpx solid #ccc;
}

.item .imgWrap {
    position: relative;
    width: 130rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.item .imgWrap .icon-play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    width: 60rpx;
    height: 60rpx;
}

.item .imgWrap image {
    width: 100%;
    height: 100%;
}

.item .info {
    /* flex: flex-grow 0 , flow-shring 1, flex-basis auto */
    flex: 1;
}

.item .buy {
    display: flex;
    margin-right: 20rpx;
    flex-direction: column;
    justify-content: space-between;

}

.item .buy .score {
    color: #ffb403;
}

.item .buy .ticket {
    margin-right: 40rpx;
    color: #fff;
    background-color: #ef4238;
    border-radius: 12rpx;
    margin-bottom: 20rpx
}

.item .info .top {
    display: flex;
    align-items: center;

}

.item .info .star {
    width: 300rpx;
}

.item .info .max2d {
    margin-left: 20rpx;
    display: inline-block;
    width: 100rpx;
    height: 40rpx;
    background-image: url(data:image/png;base64,);
    background-size: contain;
}

.ellipsis_l1 {
    text-overflow: ellipsis;
    overflow:hidden;
    white-space: nowrap;
}